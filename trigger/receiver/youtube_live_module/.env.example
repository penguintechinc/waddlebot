# YouTube Live Module Environment Variables

# Module Configuration
MODULE_NAME=youtube_live_module
MODULE_PORT=8006
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://waddlebot:password@localhost:5432/waddlebot

# Router API
ROUTER_API_URL=http://router-service:8000/api/v1/router

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_oauth_client_id_here
YOUTUBE_CLIENT_SECRET=your_oauth_client_secret_here

# Webhook Configuration
# Public URL where YouTube can send PubSubHubbub notifications
YOUTUBE_WEBHOOK_CALLBACK_URL=https://your-domain.com/api/v1/webhook

# Chat Polling Configuration
CHAT_POLL_INTERVAL=5
CHAT_MAX_RESULTS=200

# Security
SECRET_KEY=change-me-in-production
