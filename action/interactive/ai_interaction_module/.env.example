# AI Interaction Module Configuration
# ===================================

# Module Info
MODULE_NAME=ai_interaction_module
MODULE_VERSION=2.0.0
MODULE_PORT=8005

# Database
DATABASE_URL=postgresql://waddlebot:password@postgres:5432/waddlebot

# Core API
CORE_API_URL=http://router-service:8000
ROUTER_API_URL=http://router-service:8000/api/v1/router

# ========================================================================
# AI PROVIDER SELECTION: 'ollama' OR 'waddleai'
# ========================================================================
AI_PROVIDER=waddleai

# ========================================================================
# OLLAMA CONFIGURATION (when AI_PROVIDER='ollama')
# ========================================================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_USE_TLS=false
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=500
OLLAMA_TIMEOUT=30
OLLAMA_CERT_PATH=
OLLAMA_VERIFY_SSL=true

# ========================================================================
# WADDLEAI CONFIGURATION (when AI_PROVIDER='waddleai')
# ========================================================================
WADDLEAI_BASE_URL=http://waddleai-proxy:8000
WADDLEAI_API_KEY=wa-your-api-key-here
WADDLEAI_MODEL=auto
WADDLEAI_TEMPERATURE=0.7
WADDLEAI_MAX_TOKENS=500
WADDLEAI_TIMEOUT=30
WADDLEAI_PREFERRED_MODEL=

# ========================================================================
# SHARED AI CONFIGURATION
# ========================================================================
AI_MODEL=auto
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

SYSTEM_PROMPT=You are a helpful chatbot assistant for a streaming community. Provide friendly, concise, and helpful responses. Keep responses under 200 characters.
QUESTION_TRIGGERS=?
RESPONSE_PREFIX=ðŸ¤–

# Event Responses
RESPOND_TO_EVENTS=true
EVENT_RESPONSE_TYPES=subscription,follow,donation,cheer,raid,boost

# Context
ENABLE_CHAT_CONTEXT=true
CONTEXT_HISTORY_LIMIT=5

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false

# Security
SECRET_KEY=change-me-in-production
VALID_API_KEYS=
