# Discord Action Module Environment Variables
# Copy this file to .env and fill in your values

# Discord API Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Security Configuration (IMPORTANT: Generate a secure 64-character key)
MODULE_SECRET_KEY=change_me_in_production_64_char_key_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database Configuration (optional, defaults to docker-compose postgres)
# DATABASE_URL=postgresql://user:password@host:5432/waddlebot

# Server Configuration (optional)
# GRPC_PORT=50051
# REST_PORT=8070
# HOST=0.0.0.0

# JWT Configuration (optional)
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_SECONDS=3600

# Performance Settings (optional)
# MAX_CONCURRENT_REQUESTS=100
# REQUEST_TIMEOUT=30

# Logging Configuration (optional)
# LOG_LEVEL=INFO
# LOG_DIR=/var/log/waddlebotlog
# ENABLE_SYSLOG=false
# SYSLOG_HOST=localhost
# SYSLOG_PORT=514
# SYSLOG_FACILITY=LOCAL0

# Discord Rate Limiting (optional)
# DISCORD_RATE_LIMIT_GLOBAL=50
# DISCORD_RATE_LIMIT_PER_CHANNEL=5

# Retry Configuration (optional)
# MAX_RETRIES=3
# RETRY_DELAY=1.0
