# GCP Functions Action Module - Environment Variables

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT_KEY=/path/to/service-account-key.json
# Or inline JSON: GCP_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'
GCP_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com

# GCP API Settings
GCP_API_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql://waddlebot:password@postgres:5432/waddlebot

# Server Configuration
GRPC_PORT=50061
REST_PORT=8081
MODULE_PORT=8081

# Security Configuration
MODULE_SECRET_KEY=waddlebot_gcp_functions_action_secret_change_me_in_production

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600

# Module Information
MODULE_NAME=gcp_functions_action_module
MODULE_VERSION=1.0.0

# Performance Settings
MAX_WORKERS=20
REQUEST_TIMEOUT=30
MAX_BATCH_SIZE=100

# Function Invocation Settings
FUNCTION_TIMEOUT=60
MAX_RETRIES=3
RETRY_DELAY=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0
