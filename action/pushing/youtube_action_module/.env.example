# YouTube Action Module Environment Configuration

# Module Info
MODULE_NAME=youtube_action_module
MODULE_VERSION=1.0.0

# Server Ports
GRPC_PORT=50054
REST_PORT=8073

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/waddlebot

# YouTube API Configuration (REQUIRED)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_VERSION=v3
YOUTUBE_REDIRECT_URI=http://localhost:8073/oauth/callback

# Security (REQUIRED)
MODULE_SECRET_KEY=your_64_character_secret_key_change_me_in_production_env

# Performance Settings
MAX_WORKERS=20
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0

# Feature Flags
ENABLE_CHAT_ACTIONS=true
ENABLE_VIDEO_ACTIONS=true
ENABLE_PLAYLIST_ACTIONS=true
ENABLE_BROADCAST_ACTIONS=true
ENABLE_COMMENT_ACTIONS=true
