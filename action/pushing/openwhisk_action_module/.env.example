# OpenWhisk Configuration
OPENWHISK_API_HOST=https://openwhisk.example.com
OPENWHISK_AUTH_KEY=namespace:key  # Your OpenWhisk auth key in namespace:key format
OPENWHISK_NAMESPACE=guest
OPENWHISK_INSECURE=false  # Set to true for self-signed certificates

# Database Configuration
DATABASE_URL=postgresql://waddlebot:password@localhost:5432/waddlebot

# Server Configuration
GRPC_PORT=50062
REST_PORT=8082
MODULE_PORT=8082

# Security Configuration
MODULE_SECRET_KEY=waddlebot_openwhisk_action_secret_change_me_in_production  # MUST change in production

# Module Information
MODULE_NAME=openwhisk_action_module
MODULE_VERSION=1.0.0

# Performance Settings
MAX_WORKERS=20
REQUEST_TIMEOUT=30  # seconds
MAX_BATCH_SIZE=100

# OpenWhisk Settings
DEFAULT_ACTION_TIMEOUT=60000  # 60 seconds in milliseconds
MAX_ACTION_TIMEOUT=600000  # 10 minutes in milliseconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0
