# Slack Action Module - Environment Configuration Example
# Copy this file to .env and fill in your values

# Slack API Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/waddlebot

# gRPC Configuration
GRPC_PORT=50052
GRPC_MAX_WORKERS=10

# REST API Configuration
REST_PORT=8071

# JWT Authentication (use 64-character random string)
MODULE_SECRET_KEY=generate-a-secure-64-character-random-string-here-for-jwt-auth

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0

# Module Information
MODULE_NAME=slack_action_module
MODULE_VERSION=1.0.0
