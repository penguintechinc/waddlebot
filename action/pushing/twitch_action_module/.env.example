# Twitch Action Module Environment Configuration
# Copy to .env and fill in your values

# Twitch API Configuration
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Database Configuration
DATABASE_URL=postgresql://waddlebot:password@localhost:5432/waddlebot

# Server Configuration
GRPC_PORT=50053
REST_PORT=8072
MODULE_PORT=8072

# Security Configuration
# IMPORTANT: Generate a secure 64-character key for production
MODULE_SECRET_KEY=waddlebot_twitch_action_secret_change_me_in_production

# Performance Settings
MAX_WORKERS=20
REQUEST_TIMEOUT=30
MAX_BATCH_SIZE=100

# Token Management
TOKEN_REFRESH_BUFFER=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0

# Module Information
MODULE_NAME=twitch_action_module
MODULE_VERSION=1.0.0
